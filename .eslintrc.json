{
  "extends": ["next/core-web-vitals", "airbnb-base"],
  "env": {
    "es2021": true,
    "node": true
  },
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "project": "./tsconfig.json"
    // tsconfigRootDir: __dirname,
  },
  "rules": {
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "tsx": "never",
        "ts": "never",
        "js": "never"
      }
    ],
    "operator-linebreak": "off"
  },
  "ignorePatterns": [".eslintrc.json"]
}
